<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.krishnapandey.banaaosession">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/banaao_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activities.LoginActivity"
            android:label="@string/action_sign_in">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.RegisterActivity"
            android:label="Register" />
        <activity android:name=".Activities.ProfileActivity"
            android:label="Banaao Session"></activity>
        <activity android:name=".Activities.NewSessionActivity"
            android:label="Create New Session"></activity>
        <activity
            android:name=".Activities.Pop"
            android:theme="@style/AppTheme.CustomeTheme" />
        <activity android:name=".Activities.MySessionActivity"
            android:label="All Sessions"></activity>
        <activity android:name=".Activities.CompletedSessionActivity"
            android:label="Completed Session"></activity>
    </application>

</manifest>